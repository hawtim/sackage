{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [ "es2015", "dom" ],
    "target": "es5",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types/"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
